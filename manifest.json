{
    "name": "Chrome extension",
    "version": "0.1.0",
    "manifest_version": 2,
    "description": "This extension allow you to export web pages after authentication, and save theme in a mongodb database using a flask api",
    "hpmepage_url": "https://github.com/mnouayti/chrome-extension.git",
    "browser_action": {
        "default_title": "chrome-export",
        "default_popup": "src/browser_action/browser_action.html"
    },
    "background": {
        "script": ["./env.js", "node_modules/auth0-chrome/dist/auth0chrome.min.js", "src/main.js", "src/browser_action/getPagesSource.js"],
        "presistent": false
    },
    "permessions": [
        "tabs",
        "<all_url>",
        "identity",
        "notifications"
    ]
}